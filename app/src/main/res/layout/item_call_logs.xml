<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/itemCallLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/ic_bg_item"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layoutImage"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_call"
                    app:riv_corner_radius="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/layoutImage"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="Chloe"
                    android:textColor="#22253B"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="0924xxxx"
                    android:textColor="#747474"
                    android:textSize="11sp" />


            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/tvCalls"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginStart="32dp"-->
<!--                android:fontFamily="@font/roboto"-->
<!--                android:paddingEnd="10dp"-->
<!--                android:singleLine="true"-->
<!--                android:text="29 Calls"-->
<!--                android:textColor="#747474"-->
<!--                android:textSize="11sp" />-->

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

