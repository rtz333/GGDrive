<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/ic_download_rename"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:textColor="#22253B"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:paddingStart="50dp"
                android:fontFamily="@font/roboto"
                android:textColor="#22253B"/>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_bg_edit_filter"
                    android:hint="Backup 001"
                    android:paddingEnd="10dp"
                    android:paddingStart="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#85878D"
                    android:textSize="11sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FolderPath"
                android:textSize="13sp"
                android:paddingStart="50dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/roboto"
                android:textColor="#22253B"/>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtFolderPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bg_edit_filter"
                    android:hint="Backup 001"
                    android:paddingStart="30dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#85878D"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/imgFolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/edtFolderPath"
                    android:layout_centerVertical="true"
                    android:paddingEnd="20dp"
                    android:src="@drawable/ic_folder" />
            </RelativeLayout>

            <com.andexert.library.RippleView
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/ic_ok_filter"
                app:rv_centered="true"
                app:rv_color="@color/white"
                app:rv_rippleDuration="60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ok"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </com.andexert.library.RippleView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
