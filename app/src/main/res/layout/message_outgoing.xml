<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:background="@drawable/ic_bg_item"
    android:layout_margin="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/ivProfileMe"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:padding="4dp"
        android:text="Date time"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtime"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ivProfileMe"
        android:background="@drawable/ic_bg_message_theme"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:padding="8dp"
        android:text="Your outgoing message here"
        android:textColor="@android:color/black"
        android:textSize="13dp" />


    <ImageView
        android:id="@+id/ivProfileMe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:contentDescription="profile_me"
        android:src="@drawable/avatar_with_online_indicator" />

    <com.andexert.library.RippleView
        android:id="@+id/btnSelectTik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_tick_select"/>

</RelativeLayout>